<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/proxy_form" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the interval in minutes"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <EditText
            android:id="@+id/Interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the time in minutes"
            android:inputType="textPersonName"
            android:text="" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:onClick="goforward"
                android:text=" Next "
                android:textSize="20sp" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:onClick="startService"
            android:text="    Start Tracking    "
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:onClick="help"
            android:text=" Help "
            android:textSize="20sp" />

        </RelativeLayout>

    <EditText
        android:id="@+id/website1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the website to track"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/website2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the website to track"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/website3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the website to track"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/website4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the website to track"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/website5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the website to track"
        android:inputType="textPersonName"
        android:text="" />

        <EditText
            android:id="@+id/website6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the website to track"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/website7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the website to track"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/website8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the website to track"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/website9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the website to track"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/website10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the website to track"
            android:inputType="textPersonName"
            android:text="" />







</LinearLayout>

</ScrollView>